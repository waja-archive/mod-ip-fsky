#!/usr/bin/make -f
# -*- makefile -*-
# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

PACKAGE := libapache2-mod-ip-fsky
DEBIANDIR := $(CURDIR)/debian
INSTALLDIR := $(DEBIANDIR)/$(PACKAGE)
APXS := $(shell which apxs2)

config.status: configure
	dh_testdir
ifneq "$(wildcard /usr/share/misc/config.sub)" ""
	cp -f /usr/share/misc/config.sub config.sub
endif
ifneq "$(wildcard /usr/share/misc/config.guess)" ""
	cp -f /usr/share/misc/config.guess config.guess
endif
	# Add here commands to configure the package.
	./configure --prefix=/usr --mandir=\$${prefix}/share/man

build: travis-install build-arch build-indep
build-arch: build-stamp
build-indep: build-stamp

build-stamp: config.status
	dh_testdir
	$(MAKE)
	touch $@

clean: travis-clean
	dh_testdir
	dh_testroot
	rm -f build-stamp
	rm -rf debian/tmp/
	[ ! -f Makefile ] || $(MAKE) clean
	# clean files left behind make clean
	rm -f Makefile config.guess config.sub
	dh_clean

travis-clean:
	rm -f .travis.yml

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	$(MAKE) install DESTDIR=$(INSTALLDIR)

travis-install:
	ln -s debian/.travis.yml $(CURDIR)

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_installexamples
	dh_install
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
